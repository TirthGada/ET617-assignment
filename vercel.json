{
  "version": 2,
  "builds": [
    {
      "src": "vercel_app.py",
      "use": "@vercel/python"
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/vercel_app.py"
    }
  ],
  "env": {
    "DEBUG": "False",
    "PYTHONPATH": ".",
    "DJANGO_SETTINGS_MODULE": "learning_platform.settings"
  },
  "functions": {
    "vercel_app.py": {
      "includeFiles": "**"
    }
  }
} 